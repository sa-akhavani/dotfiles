    "format-time": "{H}h {M}min",
    "tooltip": true,
  },

  "clock": {
    "interval": 60,
    "align": 0,
    "rotate": 0,
    "timezone": "America/New_York",
    "tooltip-format": "<big>{:%B %Y}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "ÔÄó {:%H:%M}",
    "format-alt": "ÔÅ≥ {:%a %b %d, %G}",
